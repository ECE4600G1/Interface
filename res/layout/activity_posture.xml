<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ece4600.mainapp.Posture" >

    <Button
        android:id="@+id/returnpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subpost"
        android:layout_alignParentBottom="true"
        android:text="@string/returnpost" />

    <TextView
        android:id="@+id/subpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/subpost"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/acc_x1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subpost"
        android:layout_marginTop="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/acc_z1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_y1"
        android:layout_below="@+id/acc_y1"
        android:text="TextView" />

    <TextView
        android:id="@+id/acc_y1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_x1"
        android:layout_below="@+id/acc_x1"
        android:text="TextView" />

    <TextView
        android:id="@+id/device1Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_x1"
        android:layout_below="@+id/subpost"
        android:layout_marginTop="14dp"
        android:text="Device 1 Average Measurements:" />

    <TextView
        android:id="@+id/device2Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_z1"
        android:layout_below="@+id/acc_z1"
        android:text="Device 2 Average Measurements:" />

    <TextView
        android:id="@+id/acc_x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/device2Heading"
        android:layout_below="@+id/device2Heading"
        android:text="TextView" />

    <TextView
        android:id="@+id/acc_y2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_x2"
        android:layout_below="@+id/acc_x2"
        android:text="TextView" />

    <TextView
        android:id="@+id/acc_z2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/acc_y2"
        android:layout_below="@+id/acc_y2"
        android:text="TextView" />

    <ImageView
        android:id="@+id/displayIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_z2"
        android:layout_below="@+id/acc_z2"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="110dp"
        android:scaleType="fitCenter" />

</RelativeLayout>
