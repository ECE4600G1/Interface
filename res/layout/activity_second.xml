<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/but_isroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight=".33"
            android:text="Room" 
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="Map" 
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/timeLineReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="Return" 
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/read_xml"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Load" 
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/check_data"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Start"
            android:visibility="visible"
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF"  />

        <ToggleButton
            android:id="@+id/locationSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="@drawable/mytoggle"
            android:textColor="#FFFFFF"
            android:textOff="Record"
            android:textOn="Record"
            />

        <Button
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Pause"
              android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF"  />
    </TableRow>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_jisuan_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Show results [Press start]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_now_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Current wifi info[Press start]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_read_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="read database and showï¼š" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>