<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <LinearLayout
        android:id="@+id/layout_isroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/but_isroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/read_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Data" />

        <Button
            android:id="@+id/save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:visibility="visible" />

        <Button
            android:id="@+id/check_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:visibility="visible" />

        <Button
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/tv_jisuan_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Show results [Press start]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_now_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Current wifi info[Press start]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_read_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="read database and showï¼š" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>